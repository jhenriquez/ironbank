@model IronBank.Models.User

@{ Layout = "~/Views/Shared/_layout.cshtml"; }

<h2 class="page-header">Edit Your Profile Information</h2>
<div class="row">
    <div class="col-md-6">
        <form role="form" method="post" action="/user/profile">
            @Html.Hidden("Id",@Model.Id)
            <div class="form-group">
                <label for="name">Name:</label>
                @Html.TextBox("Name", @Model.Name, new { @class = "form-control", placeholder = "form-control" })
            </div>
            <div class="form-group">
                <label for="lastname">Last Name:</label>
                @Html.TextBox("LastName", @Model.LastName, new { @class = "form-control", placeholder = "form-control" })
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBox("Email", @Model.Email, new { @class = "form-control", placeholder = "form-control" })
            </div>
            <input class="btn btn-primary" type="submit" value="Save Changes" />
        </form>
    </div>
</div>