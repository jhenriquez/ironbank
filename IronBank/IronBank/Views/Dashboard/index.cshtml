@{ Layout = "~/Views/Shared/_layout.cshtml"; }

@model System.Collections.Generic.IList<IronBank.Models.Product>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-hover">
            <tr>
                <th>Account Number</th>
                <th>Account Type</th>
                <th>Balance</th>
            </tr>
            @foreach (var acc in Model) {
            <tr>
                <td>@acc.AccountNumber</td>
                @if (acc.Type == IronBank.Models.ProductType.SavingsAccount) {
                <td>Savings</td>
                } else {
                <td>Checking</td>
                }
                @if (acc.Currency == IronBank.Models.ProductCurrency.Dollars) {
                <td>(USD) @acc.Balance</td>
                } else {
                <td>(DOP) @acc.Balance</td>
                }
            </tr>
            }
        </table>
    </div>
</div>