@{ Layout="~/Views/Shared/_layout.cshtml"; }

@model IronBank.ViewModels.PaymentDetailsViewModel

<form method="post" action="/services/pay/@Model.ServiceId">
    <div class="form-group">
        <label>Provider:</label>
        <label>@Model.Provider</label>
        @Html.Hidden("Provider", Model.Provider)
    </div>
    <div class="form-group">
        <label>Contract:</label>
        <label>@Model.Contract</label>
        @Html.Hidden("Contract", Model.Contract)
    </div>
</form>