@{ Layout = "~/Views/Shared/_layout.cshtml"; }

@model System.Collections.Generic.IList<IronBank.Models.AvailableService>

<p>
    Here at the IronBank we value your time, that's why we offer you the possibility to save tha too. Do so by handling your
    economic obligations, if you handle yourself with any of our associates, directly from our site.
</p>

<p>
    We understand this list is small, but be confident that if one of your service provider is not on the list, we could be adding it soon.
    Your patience is truely appreciated!
</p>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @if (Html.ViewData.ModelState["Configuration"] != null) {
            foreach (var error in Html.ViewData.ModelState["Configuration"].Errors) {
            <div class="alert alert-danger text-center">@error.ErrorMessage</div>
            }
        }
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="/services/configure">
            <div class="form-group">
                <label for="ServiceId">Service Provider</label>
                <select class="form-control">
                @foreach (var service in Model) {
                    <option value="@service.Id">@service.Name</option>
                }
                </select>
            </div>
            <div class="form-group">
                <label for="ContractReference">Contract Reference</label>
                <input type="text" placeholder="Reference Number" class="form-control" />
            </div>
            <input type="submit" value="Add Service" class="btn btn-primary" />
        </form> 
    </div>
</div>
